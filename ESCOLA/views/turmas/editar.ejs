<%- include('../includes/header.ejs', {titulo: 'Lista das Turmas'}) %>
<main>
    <h2>Atualizar dados da Turma</h2>
    <form action="/turmas/editar/<%= turma.id_turma%>" method="POST" class="form">
        <div class="form-group">
            <label>Nome da turma</label>
            <input type="text" name="nome_turma" value="<%= turma.nome_turma %>" required>
        </div>
    <button type="submit" class="btn btn-principal">Adicionar</button>
    <a href="/turmas/listar" class="btn btn-secundario">Cancelar</a>
</form>
</main>

