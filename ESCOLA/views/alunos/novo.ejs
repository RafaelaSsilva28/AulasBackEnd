<%- include('../includes/header.ejs', {titulo: 'Lista dos Alunos'}) %>
<main>
    <h2>Cadastro de Novos Alunos</h2>
    <form action="/alunos/novo" method="POST" class="form">
        <div class="form-group">
            <label>Nome do Aluno</label>
            <input type="text" name="nome" required>
            <label>Idade do Aluno</label>
            <input type="text" name="idade" required>
            <label>Sexo do Aluno</label>
            <input type="text" name="sexo" required>
            <label>Turma do Aluno</label>
            <input type="text" name="nome_turma" required>
        </div>
    <button type="submit" class="btn btn-principal">Adicionar</button>
    <a href="/alunos/listar" class="btn btn-secundario">Cancelar</a>
</form>
</main>

<%- include('../includes/footer.ejs') %>