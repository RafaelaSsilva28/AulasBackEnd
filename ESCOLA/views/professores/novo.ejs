<%- include('../includes/header.ejs', {titulo: 'Lista dos Professores'}) %>

<main>
    <h2>Cadastro de Novo Professor</h2>
    <form action="/professores/novo" method="post" class="form">
        <div class="form-group">
            <label>Nome do professor</label>
            <input type="text" name="nome_professor" required>
        </div>
        <div class="form-group">
            <label>Telefone</label>
            <input type="text" name="telefone" required>
        </div>
        <div class="form-group">
            <label>Formação do professor</label>
            <input type="text" name="formacao" required>
        </div>
    <button type="submit" class="btn btn-principal">Adicionar</button>
    <a href="/professores/listar" class="btn btn-secundario">Cancelar</a>
</form>
</main>

<%- include('../includes/footer.ejs') %>
